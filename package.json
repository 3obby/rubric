{
	"devDependencies": {
		"@changesets/cli": "^2.26.2",
		"@rubriclab/eslint-config": "file:packages/@rubriclab/eslint-config",
		"@rubriclab/prettier-config": "file:packages/@rubriclab/prettier-config",
		"@rubriclab/tailwind-config": "file:packages/@rubriclab/tailwind-config",
		"@rubriclab/typescript-config": "file:packages/@rubriclab/typescript-config",
		"@turbo/gen": "^1.10.12",
		"@types/node": "^20.5.1",
		"@types/react": "^18.2.20",
		"@types/react-dom": "^18.2.7",
		"autoprefixer": "^10.4.15",
		"dotenv-cli": "^7.3.0",
		"eslint": "^8.47.0",
		"postcss": "^8.4.28",
		"prettier": "^3.0.2",
		"tailwindcss": "^3.3.3",
		"turbo": "^1.10.12",
		"typescript": "^5.1.6"
	},
	"name": "rubric",
	"packageManager": "yarn@1.22.19",
	"private": true,
	"scripts": {
		"bleed": "npx yarn-upgrade-all -W",
		"build": "dotenv -- turbo run build",
		"clean": "yarn clean:next && yarn clean:packages && yarn clean:turbo",
		"clean:next": "find . -name '.next' -type d -prune -exec rm -rf '{}' +",
		"clean:packages": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
		"clean:turbo": "find . -name '.turbo' -type d -prune -exec rm -rf '{}' +",
		"dev": "dotenv -- turbo run dev --concurrency 12",
		"format": "prettier --write .",
		"lint": "dotenv -- turbo run lint",
		"lint:fix": "dotenv -- turbo run lint -- --fix",
		"publish-packages": "changeset && changeset version && changeset publish"
	},
	"workspaces": [
		"apps/*",
		"packages/*",
		"packages/@rubriclab/*"
	]
}
